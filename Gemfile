source 'http://rubygems.org'

gem 'rails', '3.0.7'
gem 'sqlite3-ruby', :require => 'sqlite3'

# Bundle the extra gems:
gem 'devise'
gem 'will_paginate'
gem 'paperclip'

# Bundle gems for certain environments:
group :test do
  gem 'factory_girl_rails'
  gem 'mocha', :require  => nil
end

group :production do
  gem 'mysql2'
  gem 'red_unicorn'
end
